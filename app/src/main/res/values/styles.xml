<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TextViewStyleRegular">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="fontPath">@string/font_regular</item>

    </style>

    <style name="TextViewStyleBold">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:maxLength">64</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="fontPath">@string/font_bold</item>
    </style>

    <style name="HorizontalLine">
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorYellow</item>
    </style>

    <style name="OptionButtonStyle">
        <item name="android:layout_marginStart">@dimen/_7sdp</item>
        <item name="android:layout_marginEnd">@dimen/_7sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorYellow</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="fontPath">@string/font_regular</item>
        <item name="android:lineSpacingExtra">@dimen/_3sdp</item>
    </style>

    <style name="StopButtonStyle">
        <item name="android:paddingStart">@dimen/_30sdp</item>
        <item name="android:paddingEnd">@dimen/_30sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/colorRed</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="fontPath">@string/font_regular</item>
    </style>

    <style name="ScrollviewStyle">
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="TextViewStyleInfoScreen">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="fontPath">@string/font_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
